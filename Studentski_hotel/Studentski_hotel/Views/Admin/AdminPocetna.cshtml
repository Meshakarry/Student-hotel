<style>
    td:last-of-type {
        display: flex;
        justify-content: flex-end;
    }
</style>
<div style="display:flex;flex-flow:row; justify-content:space-between">
    <div style="width:20%">
        <form >
            <select id="TipOsoblja" onchange="Pretraga()" class="form-control">
                <option value="0">Svi uposlenici</option>
                <option value="1">Recepcioner</option>
                <option value="2">Referent</option>
            </select>
        </form>
    </div>
    <div>
        <button class="btn btn-info" onclick="window.location='/Admin/DodajOsoblje'">Dodaj uposlenika</button>
    </div>
</div>
<div id="AjaxTabela"></div>
<script src="~/lib/jquery/dist/jquery.js"></script>

<script>
    var Pretraga = () => {
        var indeks = document.getElementById("TipOsoblja").value;
        $.get("/Admin/PrikazOsoblja", { tipOsoblja:indeks }, function (data) {
            $("#AjaxTabela").html(data);
        })
    }
    Pretraga();
</script>