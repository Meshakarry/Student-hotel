@using Microsoft.AspNetCore.Identity
@using DBdata.EntityModels;
@inject SignInManager<Korisnik> SignInManager
@inject UserManager<Korisnik> UserManager

<ul class="navbar-nav">
@if (SignInManager.IsSignedIn(User))
{
    <li class="nav-item">
        <a class="nav-link" onclick="window.location='/Recepcija/ListaZaNapomenuti'">Obavijesti Studente</a>
        <a class="nav-link text-white" href="/Identity/Account/Manage">Moji podaci</a>
        <form class="form-inline" asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Action("Index", "Home", new { area = "" })">
            <button type="submit" class="nav-link btn btn-link text-white">Logout</button>
        </form>

    </li>
}
else
{
    <li class="nav-item">
        <a class="nav-link text-dark" asp-area="Identity" asp-page="/Account/Register">Register</a>
    </li>
    <li class="nav-item">
        <a class="nav-link text-dark" asp-area="Identity" asp-page="/Account/Login">Login</a>
    </li>
}
</ul>

<style>
    .nav-item:first-of-type {
        display: flex;
    }

    a:first-child {
        color: #17a2b8 !important;
    }

    a:first-child:hover {
        outline: 2px solid royalblue;
        border-radius: 24px;
        font-size: 16px;
    }

    ul {
        align-items: center;
    }

</style>
