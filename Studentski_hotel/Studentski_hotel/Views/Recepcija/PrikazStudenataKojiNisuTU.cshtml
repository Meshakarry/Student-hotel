@model Studentski_hotel.Models.Kuhinja.PrikazPrisutniStudenataVM

<style>
    a.delete {
        color: red;
    }
</style>
<table class="table table-borderless table-striped">
    <thead>
        <tr>
            <th>Ime i prezime</th>

            <th>Broj sobe</th>
            <th>Broj kartice</th>

            <th></th>
        </tr>
    </thead>
    @if (Model.Studenti != null)
    {

        @foreach (var item in Model.Studenti)
        {
            @if (item.Uselio)
            {
<tr>
    <td>@item.Ime @item.Prezime</td>
    <td>@item.Soba</td>

    <td>@item.BrojKartice</td>
    <td><a class="delete" href="/Recepcija/OznaciPrisutnim?ime=@item.Ime">Oznaci prisutnim</a></td>
</tr>
            }
        }
    } else
    {
        <h4>Nema studenata koji nisu prisutni</h4>
    }


</table>