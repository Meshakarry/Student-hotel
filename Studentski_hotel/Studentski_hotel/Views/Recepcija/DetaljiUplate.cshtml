
@using Studentski_hotel.Models.Recepcija

@model DetaljiUplateVM


<style>
    .sve {
        box-shadow: 0px 10px 20px grey;
        border-radius: 12px;
        min-height:310px;
        display: flex;
        flex-direction: column;
        align-items: center;
    }
    h2 {
        margin-bottom: 14px;
    }

    .btn-outline-info {
        margin-left: 31%;
        margin-top: 20px;
    }
  
   
</style>

<partial name="_BackButtonPartial" />

        <h2>Uplata/@Model.RazlogUplate</h2>

    <div class="sve">
        <h3> Ime studenta : @Model.Student</h3>
        <br/>
        <div>
            <label>Datum uplate : </label>
            <input asp-for="DatumUplate" readonly />

            <input asp-for="uplataID" hidden id="uplataID" />
        </div>
        <div>
            <label>Ime Recepcionera : </label>
            <input asp-for="ImeRecepcionera" readonly />
        </div>
        <div>
            <label> Nacin uplate: </label>
            <input asp-for="NacinUplate" readonly />
        </div>
        <div>
            <label> Iznos uplate: </label>
            <input asp-for="VrijednostUplate" readonly />
        </div>
        <button class="btn btn-outline-info" onclick="window.location='/Recepcija/EditUplata?uplataID=' + @Model.uplataID">Edit uplata</button>

    </div>

