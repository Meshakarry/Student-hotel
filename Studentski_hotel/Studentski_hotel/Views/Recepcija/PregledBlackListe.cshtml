@using Studentski_hotel.Models.Recepcija
@model BlackListItemsVM

<style>
    .btn-pregled {
        background-color: #567d5d;
        color: white;
    }

        .btn-pregled:hover {
            color: white;
            background-color: #263829;
        }

    .btn-success {
        float: right;
    }

    a.delete {
        color: red;
    }
</style>

<h4>Blacklista studentskog doma: </h4>

<div class="naslov">
    <button class="btn btn-success" onclick="window.location='/Recepcija/EditBlackList'"> Dodaj studenta +</button>
</div>

<table class="table table-borderless table-striped">
    <thead>
        <tr>
            <th>Student</th>
            <th>Razlog</th>
        </tr>
    </thead>
    @foreach (var student in Model.studenti)
    {
        <tr>
            <td>@student.studentID</td>

            <td>@student.ImeStudenta</td>
            <td>@student.Razlog</td>

            <td><a class="delete" href="/Recepcija/SkloniStudenta?studentID=@student.studentID">Ukloni sa liste</a></td>
            <td><button class="btn btn-success" onclick="window.location='/Recepcija/EditBlackList?studentID=@student.studentID'"> Edit studenta</button></td>
        </tr>
    }

</table>
