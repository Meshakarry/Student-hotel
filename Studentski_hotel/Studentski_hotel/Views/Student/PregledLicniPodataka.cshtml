@using Studentski_hotel.Models.Student

@model LicniPodaciVM

<style>
    body {
        margin-bottom: 0px !important;
    }
    .personal-wrapper {
        display: flex;
        justify-content: space-around;
        min-height: 500px;
        box-shadow: 0px 10px 20px grey;
        border-radius: 24px;
    }

    .image-wrapper {
        display: flex;
        flex-direction: column;
        margin-top: 36px;
    }

    .actions {
        margin-top: 20px;
    }

    .data-wrapper {
        font-size: 21px;
        margin-top: 36px;
    }

    .heading {
        font-weight: bold;
        font-size: 24px;
        line-height: 26px;
    }

    img {
        border-radius: 50%;
        border: 1px solid royalblue;
        width: 160px;
        height: 160px;
    }



</style>
     <p class="heading">Licni podaci</p>

<div class="personal-wrapper">


    <div class="image-wrapper">
        <div>
            @if (Model.SlikaStanara.Length <= 0)
            {
              <img src="~/images/placeholder-image.svg" alt="Upload new Image" />
            } else { 
              <img src="@Model.SlikaStanara" />
            }
        </div>
        @if (Model.SlikaStanara.Length > 0)
         {
                <button class="btn btn-outline-primary rounded actions">Delete</button>
         } else {
           <button class="btn btn-outline-primary rounded actions">Upload</button>
         }
    </div>

    <div class="data-wrapper">
        <p> Ime: @Model.Ime</p>
        <p>Prezime: @Model.Prezime</p>
        <p>Ime roditelja: @Model.ImeOca</p>
        <p>JMBG: @Model.BrLicneKarte</p>
        <p>Datum rodjenja: @Model.DatumRodjenja</p>
        <p>Prebivaliste: @Model.Prebivaliste</p>
        <p>Broj indeksa: @Model.BrojIndeksa</p>
        <p>Tip studenta: @Model.TipStanara</p>

   
    </div>
    <br />
</div>